featured_image_style: contain
---
<div class="container-desktop">
  <div class="is-clipped-touch" style="padding: 0 0 1.5rem 0">
    <div class="columns is-hidden-touch">
      <div class="column is-8">
        <div style="margin: 3.5rem 0 0 0">
          <h1 class="title is-size-3 has-text-weight-bold">{{ title }}</h1>
        </div>
      </div>
    </div>
    <div class="columns">
      <div class="column">
        <article class="has-padding-top-1-tablet-only">
          <div class="columns is-multiline">
            <div class="column is-full">
              {% include "components/fundraise/Header.njk" %}
            </div>
            <div class="column is-full is-11-desktop is-offset-1-desktop">
              {% include "components/fundraise/Content.njk" %}
            </div>
          </div>

        </article>
      </div>
      <aside class="column is-4 is-hidden-touch">
        <div class="box" style="position: -webkit-sticky; position: sticky; top: 4rem;">
          {% include "components/fundraise/Aside.njk" %}
        </div>
      </aside>
    </div>
  </div>
</div>