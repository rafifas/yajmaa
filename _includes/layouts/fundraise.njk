---
layout: layouts/base.njk
featured_image: /static/img/pm3.png
featured_image_style: contain
---

<section class="is-clipped-mobile">
  <div class="columns">
    <div class="column is-hidden-touch has-bottompadding has-toppadding-big is-10">
      <h1 class="title">{{ title }}</h1>
    </div>
  </div>

  <div class="columns">
    <div class="column clearpadding-mobile-only">
      <header>
        {% import "components/hero.njk" as hero %}
        {{ hero.heroimage(featured_image, featured_image_style, "featured image", featured_image_title) }}
        <div class="is-hidden-desktop has-sidepadding-touch">
          <h1 class="title is-size-4" style="margin: 0.7rem 0;">{{ title }}</h1>
          {% include "components/fr-aside.njk" %}
          <div id="fr-button-1">
            {% include "components/fr-button.njk" %}
          </div>
        </div>
      </header>

      <article class="has-sidepadding-touch has-toppadding">
        <div class="has-topborder has-bottomborder">information about author<br><br><br><br></div>
        <p class="is-size-6 has-text-grey has-text-right has-toppadding">
          <time datetime="{{ date | machineDate }}">
            {{ date | readableDate }}
          </time>
        </p>
        <div class="content has-toppadding">
          {{ content | safe }}
        </div>
      </article>
    </div>

    <aside class="column is-4 is-hidden-touch">
      <div class="box" style="position: -webkit-sticky; position: sticky; top: 4rem;">
        {% include "components/fr-aside.njk" %}
        <div id="fr-button-2">
          {% include "components/fr-button.njk" %}
        </div>
      </div>
    </aside>
  </div>
</section>