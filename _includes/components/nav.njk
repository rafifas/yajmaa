<div id="navbar">
    <template>
        <b-navbar fixed-top shadow>
            <template slot="brand">
                <b-navbar-item href="{{ '/' | url }}">
                    <img src="https://bulma.io/images/bulma-logo.png"
                    alt="Open source donation platform"
                    width="112" height="28">
                </b-navbar-item>
            </template>

            <template slot="start">
                {# collect "eleventyNavigation" in Pages' Front Matter and add them to navigation.
                refers to https://www.11ty.dev/docs/plugins/navigation/#copy-and-paste-templates #}
                {% set navPages = collections.all | eleventyNavigation %}
                {% for navItem in navPages %}
                    <b-navbar-item
                       href="{{ navItem.url | url }}"
                       {% if navItem.url == page.url %}active{% endif %}>
                        {{ navItem.title }}
                    </b-navbar-item>
                {% endfor %}
            </b-navbar>
        </template>
    </div>