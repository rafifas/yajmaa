<div id="navbar">
    <template>
        <b-navbar fixed-top shadow transparent>
                <template slot="brand">
                    <b-navbar-item href="{{ '/' | url }}" style="margin-right: 1em;">
                        <img src="{{ metadata.brand_logo | url }}" alt="{{ metadata.title }}">
                    </b-navbar-item>
                </template>
                <template slot="start">
                    {# collect "eleventyNavigation" in Pages' Front Matter and add them to navigation.
                    refers to https://www.11ty.dev/docs/plugins/navigation/#copy-and-paste-templates #}
                    {% set navPages = collections.all | eleventyNavigation %}
                    {% for navItem in navPages %}
                        <b-navbar-item href="{{ navItem.url | url }}" class="has-text-weight-bold"
                        {% if navItem.url == page.url %}active{% endif %}>
                            {{ navItem.title }}
                        </b-navbar-item>
                    {% endfor %}
                </template>
        </b-navbar>
    </template>
</div>