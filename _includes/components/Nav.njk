<div id="navbar">
    <template>
        <b-navbar fixed-top shadow transparent class="container">

                <template slot="brand">
                    <b-navbar-item href="{{ '/' | url }}">
                        <img src="{{ metadata.brand_logo | url }}" alt="Open source donation platform">
                    </b-navbar-item>
                </template>

                <template slot="start">
                    {# collect "eleventyNavigation" in Pages' Front Matter and add them to navigation.
                    refers to https://www.11ty.dev/docs/plugins/navigation/#copy-and-paste-templates #}
                    {% set navPages = collections.all | eleventyNavigation %}
                    {% for navItem in navPages %}
                        <b-navbar-item href="{{ navItem.url | url }}"
                        {% if navItem.url == page.url %}active{% endif %}>
                            {{ navItem.title }}
                        </b-navbar-item>
                    {% endfor %}
                </template>

        </b-navbar>
    </template>
</div>