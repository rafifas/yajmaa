<h1 class="title" style="margin-bottom: 1.8rem">{{ cta.title }}</h1>
<h2 class="subtitle">{{ cta.content }}</h2>
<div class="buttons has-text-medium" style="margin-top: 1.5rem">
    <a href="{{ cta.button.first.link }}" class="button is-medium is-primary">{{ cta.button.first.title }}</a>
    {% if cta.button.second.title %}
        <a href="{{ cta.button.second.link }}" class="button is-medium">{{ cta.button.second.title }}</a>
    {% endif %}
</div>
</div>