<h1 class="title is-size-3-desktop is-size-4 has-text-weight-bold" style="margin: 3.5rem 0 1rem 0;">{{ title }}</h1>
<div class="field">
    <label class="label is-hidden">Jumlah Donasi</label>
    <div class="field has-addons">
        <p class="control is-primary">
            <span class="select">
                <select v-model="currency">
                    <option>Rp</option>
                    <option>USD</option>
                </select>
            </span>
        </p>
        <p class="control is-expanded is-primary">
            <input class="input has-text-weight-bold" type="number" v-model="amount" v-if="toggle" @blur="onBlurNumber" placeholder="Jumlah Donasi" lazy number required="required">
            <input class="input has-text-weight-bold" type="text" v-model="amountFormatted" v-if="!toggle" @focus="onFocusText" placeholder="Jumlah Donasi" required="required">
        </p>
    </div>
</div>
<hr>
<div class="field is-horizontal">
    <div class="field-label is-normal">
        <label class="label">Metode Pembayaran</label>
    </div>
    <div class="field-body">
        <div class="field">
            <p class="control">
                <div class="select is-fullwidth">
                    <select v-model="paymentMethod" required="required">
                        <option>Bank Mandiri</option>
                        <option>Bank BNI Syariah</option>
                        <option>PayPal</option>
                    </select>
                </div>
            </p>
        </div>
    </div>
</div>
<hr>
{# <h2 class="is-size-5" style="margin-bottom: 1rem;font-weight: 700;">Lengkapi data di bawah ini</h2> #}
<div class="field is-horizontal">
    <div class="field-label is-normal">
        <label class="label">Nama Lengkap</label>
    </div>
    <div class="field-body">
        <div class="field">
            <p class="control">
                <input autocomplete="name" class="input" type="text" placeholder required="required">
            </p>
        </div>
    </div>
</div>
<hr>
<div class="field is-horizontal">
    <div class="field-label is-normal">
        <label autocomplete="tel" class="label">Nomor Whatsapp</label>
    </div>
    <div class="field-body">
        <div class="field">
            <p class="control is-expanded">
                <input class="input" type="tel" required="required">
            </p>
        </div>
    </div>
</div>
<hr>
<div class="field">
    <div class="control">
        <div class="buttons is-right">
            <a href="{{ pagination.href.previous }}" class="button is-danger is-light has-text-weight-bold">Batal</a>
            <button class="button is-primary has-text-weight-bold" v-on:click.prevent="nextStep">
                <span>Lanjut</span>
                <span class="icon is-medium">
                    <i class="mdi mdi-24px mdi-chevron-right"></i>
                </span>
            </button>
        </div>
    </div>
</div>