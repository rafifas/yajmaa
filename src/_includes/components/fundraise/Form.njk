<div class="field">
    <label class="label">Jumlah Donasi</label>
    <div class="field has-addons">
        <p class="control is-primary">
            <span class="select">
                <select v-model="form.currency">
                    <option v-for="(value) in currencies">
                        {{ '{{ value }}' }}
                    </option>
                </select>
            </span>
        </p>
        <p class="control is-expanded is-primary">
            <cleave
                class="input has-text-weight-bold" 
                v-model="form.amount"
                :options="options.amount"
                placeholder="Jumlah Donasi"
                required="required">
        </p>
    </div>
</div>
<hr>
<div class="field">
    <label class="label">Metode Pembayaran</label>
    <div class="field">
        <p class="control">
            <div class="select is-fullwidth">
                <select v-model="form.paymentMethod" required="required">
                    <option v-for="({name}, index) in banks" 
                        :value="index+1">
                        {{ '{{ name }}' }}
                    </option>
                </select>
            </div>
        </p>
    </div>
</div>
<hr>
<div class="field">
    <label class="label has-text-left">Donatur</label>
    <div class="field-body">
        <div class="field">
            <p class="control is-expanded has-icons-right">
                <input v-model="form.name"
                    autocomplete="name"
                    class="input"
                    type="text"
                    placeholder="Nama"
                    required="required">
                <span class="icon is-small is-right">
                    <i class="mdi mdi-account"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control is-expanded has-icons-right">
                <input
                    v-model="form.whatsapp"
                    class="input"
                    type="tel"
                    autocomplete="tel"
                    placeholder="Nomor Whatsapp"
                    required="required">
                <span class="icon is-small is-right">
                    <i class="mdi mdi-whatsapp"></i>
                </span>
            </p>
        </div>
    </div>
</div>