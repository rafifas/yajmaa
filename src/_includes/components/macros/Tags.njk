{% macro tags(tags) %}

    {% if tags %}
        <div class="tags">
            {% for tag in tags %}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <span class="tag">
                    <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                </span>
            {% endfor %}
        </div>
    {% endif %}

{% endmacro %}